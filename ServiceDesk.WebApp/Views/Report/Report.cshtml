@model ServiceDesk.Domain.Entities.Report

@{
    ViewData["Title"] = $"Обращение от {Model.FullName}";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="form-group row">
	<span class="col-sm-2 col-form-label">Статус</span>

	<div class="col-sm-10">
		@await Html.PartialAsync("_StatusPartial", (int)Model.Status)
	</div>
</div>

<div class="form-group row">
	<span class="col-sm-2 col-form-label">ID</span>

	<div class="col-sm-10">
		<span class="form-control-plaintext">@Model.Id</span>
	</div>
</div>

<div class="form-group row">
	<span class="col-sm-2 col-form-label">Полное имя</span>

	<div class="col-sm-10">
		<span class="form-control-plaintext">@Model.FullName</span>
	</div>
</div>

<div class="form-group row">
	<span class="col-sm-2 col-form-label">Телефон</span>

	<div class="col-sm-10">
		<span class="form-control-plaintext">@Model.Phone</span>
	</div>
</div>

<div class="form-group row">
	<span class="col-sm-2 col-form-label">Дата обращения</span>

	<div class="col-sm-10">
		<span class="form-control-plaintext">@Model.Date</span>
	</div>
</div>

<div class="form-group row">
	<span class="col-sm-2 col-form-label">Текст обращения</span>

	<div class="col-sm-10">
		<span class="form-control-plaintext">@Model.Text</span>
	</div>
</div>

